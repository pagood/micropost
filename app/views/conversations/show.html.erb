
			<div id="chat-title">
				<%= @conversation.id %>
			</div>
			<div id="chat-content" style="height:300px">
				<% for i in @last...@conversation.messages.length %>
					<p><%= @conversation.messages[i].content %></p>
				<% end %>
			</div>
			<div id="chat-message">
				<%= form_for :message,url: messages_path,method: :post,remote:true,html:{autocomplete:"off"} do |f|%>
				<%= f.hidden_field :conversation_id,value:@conversation.id %>
				<%= f.text_field :content,style:"width:55%"%>
				<%= f.submit "POST",class: "btn btn-primary"%>
				<% end %>
			</div>

<%= subscribe_to conversation_path(@conversation) %>