
<div id="chat-title">
	<%= link_to contact_relationship_path(@contact_relationship,conversation_id: @conversation.id),method: :delete,remote:true do%>
		<span class="glyphicon glyphicon-remove place-right white" style="padding:5px"></span>
	<% end %>
	<span class="glyphicon glyphicon-minus place-right white create-contact-btn close-chat" style="padding:5px"></span>
	<script>$('.close-chat').on('click',function(){
		$(this).parent().parent().removeClass("visible-chat");
		$(this).parent().parent().addClass("invisible-chat");
		$('#chat-box-container').hide();
		$('#contacts-container').append("<%= escape_javascript(render('shared/contact',c:@contact_relationship.contact))  %>");
	});
	
	</script>

	
	
</div>
<div id="chat-content" style="height:300px">
	<% for i in @last...@conversation.messages.length %>
	<p><%= @conversation.messages[i].content %></p>
	<% end %>
</div>
<div id="chat-message">
	<%= form_for :message,url: messages_path,method: :post,remote:true,html:{autocomplete:"off"} do |f|%>
	<%= f.hidden_field :conversation_id,value:@conversation.id %>
	<%= f.text_field :content,style:"width:55%",class: "no-border",placeholder: "Say Something"%>
	<% end %>
</div>

