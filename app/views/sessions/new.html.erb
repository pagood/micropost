<div class="screen">
	
	<div class="button pull-right right-top transparent sm-btn" id="signup"><div class="btn-center"><p>Sign Up</p></div></div>

	<div class="center-form">
		

		<div class='logo lg-btn'>FuckBook.</div>
		<%= form_for :session, url: '/login',method: :post do |f| %>
		<%= f.text_field :email,class: "input-field lg-btn",style: "width:300px",:placeholder => 'email' %>
		<%= f.password_field :password,class: 'input-field lg-btn',style: "width:300px", :placeholder => 'password'%>
		<% unless @msg.nil? %>
		<div class="container login_error_background">
			<div class="error_messages">
				<%= @msg %>
			</div>
		</div>
		<% end %>
		<%= f.submit 'Log In',class: "btn btn-primary btn-lg btn-block submit lg-btn",style: "width:300px"%>
		<% end %>
		<%= link_to "Forgot your password",new_password_reset_path,{ :'data-no-turbolink' =>  "true" } %>
	</div>
</div>