<div class="screen">
	<div class="container">
		
		
		
		<div class="row">
			<div class="col-md-12" align="center">
				<div class="center-form" align="center">
					

					<div class='logo lg-btn'>FfffBook.</div>
					<%= form_for :session, url: '/login',method: :post do |f| %>
					<%= f.text_field :email,class: "input-field lg-btn",style: "width:300px;display:block;border-radius:0px",:placeholder => 'email' %>
					<%= f.password_field :password,class: 'input-field lg-btn',style: "width:300px;border-radius:0px", :placeholder => 'password'%>
					<% unless @msg.nil? %>
					<div class="container login_error_background">
						<div class="error_messages">
							<%= @msg %>
						</div>
					</div>
					<% end %>
					<%= f.submit 'Log In',class: "btn btn-primary btn-lg btn-block submit lg-btn",style: "width:300px;font-size:20px"%>
					<% end %>
					<div class="btn btn-info" style="width:300px;display:block;font-size:20px;margin-top:5px;" id="signup">Sign up</div>
					<%= link_to "Forgot your password",new_password_reset_path,{ :'data-no-turbolink' =>  "true" } %>
				</div>
			</div>
		</div>
	</div>
</div>
