<div class="post" data-id="<%= post.id %>" id="<%= post.id %>">
	<div class="name-bar">

		<div class="">
			<%= image_tag(post.user.avatar.small.url,class:"img-circle xxs-img-circle inline place-left post-profile")%><p class="xxs-name place-left post-profile deep-blue"><b><%= post.user.user_name %></b></p>
			<% if Time.now - post.created_at > 86400%>
				<p class="xxs-font gray place-right xxs-name"><%= post.created_at.strftime("%B %d, %Y") %></p>
			<% else %>
				<p class="xxs-font gray place-right xxs-name"><%= time_ago_in_words(post.created_at) %> ago</p>
			<% end %>
		</div>
		<script>
			$('.post-profile').on('click',function(){
				window.location.href='<%= user_path(post.user) %>';
			});
		</script>

	</div>
	<div class="photo-area">
		<% if post.photo? %>
		<%= image_tag post.photo.url,class:"post-photo"%>
		<% end %>
	</div>
	<div class="txt-area">
		<h5 align="left"><%= post.likes %> likes</h5>
		<p align="justify"><%= post.content %></p>
	</div>
	<div class="row">
		<div class="hidden-xs col-sm-6 col-md-6 border-right like-btn">
			<span class="glyphicon glyphicon-heart-empty deep-gray"></span>
		</div>
		<div class="hidden-xs col-sm-6 col-md-6 comment-btn deep-gray">
			<h4 >Comment</h4>
		</div>
		<div class="hidden-sm hidden-md col-xs-6 hidden-lg border-right like-btn">
			<span class="glyphicon glyphicon-heart-empty deep-gray"></span>
		</div>
		<div class="hidden-sm hidden-md col-xs-6 hidden-lg comment-btn deep-gray">
			<h5>Comment</h5>
		</div>
	</div>

</div>
<div class="comment-container">
	
	
</div>
<div class="comment-preloader-container" align="center">
	<img src="/assets/728" class="xxs-img-circle"><p>loading</p>
</div>