<div class="screen">

	<div class="center-form">
		

		<div class='logo'>FuckBook.</div>
		<%= form_for @user,url: password_reset_path(params[:id]) do |f| %>
		<%= f.password_field :password,class: 'input-field',style: "width:300px",:placeholder => 'new password' %>
		<%= f.password_field :password_confirmation,class: 'input-field',style: "width:300px",:placeholder => 'new password confirmation' %>
		<%= hidden_field_tag :email,@user.email%>
		<%= render "shared/error_messages",object: f.object %>

		<%= f.submit 'Reset Password',class: "btn btn-primary btn-lg btn-block submit",style: "width:300px"%>
		<% end %>
	</div>
</div>