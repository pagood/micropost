if($('#<%= @post.id %>').hasClass("unfoldered")){
	// console.log("wtf");
	$('#<%= @post.id %>').next().find(".comment-list").append('<%= escape_javascript(render @comments)%>');
}
else{
	// console.log("new");
	$('#<%= @post.id %>').addClass("unfoldered");
	$('#<%= @post.id %>').next().next().hide();
	$('#<%= @post.id %>').next().append('<%= escape_javascript(render 'shared/comment_feed')%>');
	$('#<%= @post.id %>').next().find(".comment-field").focus();
}
if(!<%= @flag %>){
	$('#<%= @post.id %>').next().find(".load-comment").hide();
}
