<div class="container home-body outline following-page">
	
		<ul class="nav nav-tabs">
			<li role="presentation" class="active" ><a href="javascript:void(0)" >Followers</a></li>
		</ul>
		<div>
		<% @followers.each_with_index do |follower,page|%>
		<% if page%2 == 0%>
			<div class="info-row" >
				<div class="row">
					<div class="col-md-2 col-sm-2 col-xs-2">
						<%= link_to image_tag(follower.avatar.medium.url,class:"sm-img-circle img-circle user-link"),user_path(follower),remote:true %>
					</div>
					<div class="col-md-4 col-sm-4 col-xs-4">
						<%= link_to user_path(follower),remote:true,class:"user-link" do%>
						<p><b><%= follower.user_name %></b></p>
						<% end %>
						<p><%= follower.last_post_time %></p>
					</div>
					<div class="col-md-2 col-md-offset-4 col-sm-2 col-sm-offset-4 col-xs-2 col-xs-offset-3">
						<div id="follow-form<%=follower.id%>">
							<% if current_user.active_relationships.find_by(following_id: follower.id) %>
							<%= render 'users/unfollow' ,user:follower%>
							<% else %>
							<%= render 'users/follow' ,user:follower%>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<% else %>
			<div class="info-row-odd" >
				<div class="row">
					<div class="col-md-2 col-sm-2 col-xs-2">
						<%= link_to image_tag(follower.avatar.medium.url,class:"sm-img-circle img-circle user-link"),user_path(follower),remote:true %>
					</div>
					<div class="col-md-4 col-sm-4 col-xs-4">
						<%= link_to user_path(follower),remote:true,class:"user-link" do%>
						<p><b><%= follower.user_name %></b></p>
						<% end %>
						<p><%= follower.last_post_time %></p>
					</div>
					<div class="col-md-2 col-md-offset-4 col-sm-2 col-sm-offset-4 col-xs-2 col-xs-offset-3">
						<div id="follow-form<%=follower.id%>">
							<% if current_user.active_relationships.find_by(following_id: follower.id) %>
							<%= render 'users/unfollow' ,user:follower%>
							<% else %>
							<%= render 'users/follow' ,user:follower%>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		<% end %>
		<%= will_paginate @followers%>
		</div>
</div>